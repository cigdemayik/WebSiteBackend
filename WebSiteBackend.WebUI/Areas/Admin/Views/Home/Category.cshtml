@{
    Layout = "~/Areas/Admin/Views/Shared/_AdminLayout.cshtml";
    @model List<WebSiteBackend.WebUI.Areas.Admin.Models.CategoryModels.CategoryModel>;
}
<div class="container-fluid">

    <div class="card shadow mb-4">
        <div class="card-header py-3">
            Kategori Tablosu
            @Html.ActionLink("Ekle", "CategoryCreate", "Home", null, new { @class= "btn btn-primary float-right"} )
        </div>
        @if (Model.Count<=0)
        {
                <p class="text-center">Hiç Veri Yok</p>
        }
        else
        {
        <div class="card-body">
            <div class="table-responsive">
                <table class="table table-bordered" id="dataTable" width="100%" cellspacing="0">
                    <thead>
                        <tr>
                            <th>Başlık</th>
                            <th>Dil</th>
                            <th>İşlem</th>
                        </tr>
                    </thead>
                    <tbody>
                        @foreach (var item in Model)
                        {
                            <tr>
                                <td>@item.Name</td>

                                @if (((int)item.Language) == 1)
                                {
                                    <td>"Türkçe"</td>
                                }
                                else
                                {
                                    <td>"İngilizce"</td>
                                }
                                <td>
                                    @Html.ActionLink("Güncelle", "CategoryUpdate", "Home", new{ id = item.Id}, new { @class= "btn btn-warning"} )
                                    @Html.ActionLink("Sil", "CategoryDelete", "Home",new{ id = item.Id}, new { @class= "btn btn-danger"} )
                                </td>
                            </tr>
                        }

                    </tbody>
                </table>
            </div>
        </div>
        }
        
        
        
    </div>

</div>