 @{
    Layout = "~/Areas/Admin/Views/Shared/_AdminLayout.cshtml";
    @model WebSiteBackend.WebUI.Areas.Admin.Models.CategoryModels.CategoryUpdateModel;
}

@using (Html.BeginForm("CategoryUpdate","Home",FormMethod.Post))
{
    @Html.ValidationSummary(true)

    <div class="card">
        <div class="card-header">
            Kategori
        </div>
        <div class="card-body">
            <div class="form-group">
                <input type="hidden" value="@Model.Id" />
            </div>
            
            <div class="form-group">
                @Html.TextBoxFor(m=>m.Name,new {@class="form-control form-control-user"})
                @Html.ValidationMessageFor(m=>m.Name)
            </div>
            <input type="submit" value="Güncelle" class="btn btn-primary"/>
        </div>
    </div>
}