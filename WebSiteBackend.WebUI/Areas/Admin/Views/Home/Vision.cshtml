@{
    Layout = "~/Areas/Admin/Views/Shared/_AdminLayout.cshtml";
    @model List<WebSiteBackend.WebUI.Areas.Admin.Models.VisionModels.VisionModel>;
}
<div class="container-fluid">

    <div class="card shadow mb-4">
        <div class="card-header py-3">
            Vizyon ve Misyon Tablosu
        </div>
        @if (Model.Count <= 0)
        {
            <p class="text-center">Hiç Veri Yok</p>
        }
        else
        {
            <div class="card-body">
                <div class="table-responsive">
                    <table class="table table-bordered" id="dataTable" width="100%" cellspacing="0">
                        <thead>
                            <tr>
                                <th>İçerik</th>
                                <th>Dil</th>
                                <th>İşlem</th>
                            </tr>
                        </thead>
                        <tbody>
                            @foreach (var item in Model)
                            {
                                <tr>
                                    <td>@item.Content</td>

                                    @if (((int)item.Language) == 1)
                                    {
                                        <td>Türkçe</td>
                                    }
                                    else
                                    {
                                        <td>İngilizce</td>
                                    }
                                    <td>
                                        @Html.ActionLink("Güncelle", "VissionMissionUpdate", "Home", new { id = (item.Id) }, new { @class = "btn btn-warning" })
                                    </td>
                                </tr>
                            }

                        </tbody>
                    </table>
                </div>
            </div>
        }



    </div>

</div>