@{
    Layout = "~/Areas/Admin/Views/Shared/_AdminLayout.cshtml";
    @model List<WebSiteBackend.WebUI.Areas.Admin.Models.AddressModels.AddressModel>;
}
<div class="container-fluid">

    <div class="card shadow mb-4">
        <div class="card-header py-3">
            Adres Tablosu
            @Html.ActionLink("Ekle", "AddressCreate", "Home", null, new { @class = "btn btn-primary float-right" })
        </div>
        @if (Model.Count <= 0)
        {
            <p class="text-center">Hiç Veri Yok</p>
        }
        else
        {
            <div class="card-body">
                <div class="table-responsive">
                    <table class="table table-bordered" id="dataTable" width="100%" cellspacing="0">
                        <thead>
                            <tr>
                                <th>İçerik</th>
                                <th>Dil</th>
                                <th>İşlem</th>
                            </tr>
                        </thead>
                        <tbody>
                            @foreach (var item in Model)
                            {
                                <tr>
                                    <td>@item.Content</td>

                                    @if (((int)item.Language) == 1)
                                    {
                                        <td>Türkçe</td>
                                    }
                                    else
                                    {
                                        <td>İngilizce</td>
                                    }
                                <td>
                                    @Html.ActionLink("Güncelle", "AddressUpdate", "Home", new { id = item.Id }, new { @class = "btn btn-warning" })
                                    @Html.ActionLink("Sil", "AddressDelete", "Home", new { id = item.Id }, new { @class = "btn btn-danger" })
                                </td>
                                </tr>
                            }

                        </tbody>
                    </table>
                </div>
            </div>
        }



    </div>

</div>