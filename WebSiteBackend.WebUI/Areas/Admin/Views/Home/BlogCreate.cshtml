@{ Layout = "~/Areas/Admin/Views/Shared/_AdminLayout.cshtml";
    @model WebSiteBackend.WebUI.Areas.Admin.Models.BlogModels.BlogCreateModel;
}

@using (Html.BeginForm("BlogCreate", "Home", FormMethod.Post))
{
@Html.ValidationSummary(true)

                <div class="card">
                    <div class="card-header">
                        Blog
                    </div>
                    <div class="card-body">

                        <div class="form-group">
                            @Html.TextBoxFor(m => m.Header, new { @class = "form-control form-control-user" })
                            @Html.ValidationMessageFor(m => m.Header)
                        </div>
                        <div class="form-group">
                            @Html.TextBoxFor(m => m.Content, new { @class = "form-control form-control-user" })
                            @Html.ValidationMessageFor(m => m.Content)
                        </div>
                        <div class="form-group">
                            @Html.TextBoxFor(m => m.ImageUrl, new { @class = "form-control form-control-user" })
                            @Html.ValidationMessageFor(m => m.ImageUrl)
                        </div>
                        <div class="form-group">
                            @Html.DropDownListFor(m => m.CategoryId, new List<SelectListItem>{
                new SelectListItem {},
                new SelectListItem {}
            }, new { @class = "form-control form-control-user" })
                            @Html.ValidationMessageFor(m => m.CategoryId)
                        </div>
                        <input type="submit" value="Kaydet" class="btn btn-primary" />
                    </div>
                </div>}