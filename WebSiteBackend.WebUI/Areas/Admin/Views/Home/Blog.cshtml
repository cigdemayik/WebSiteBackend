    @{ Layout = "~/Areas/Admin/Views/Shared/_AdminLayout.cshtml";
    @model List<WebSiteBackend.WebUI.Areas.Admin.Models.BlogModels.BlogModel>;
    }
    <div class="container-fluid">

        <div class="card shadow mb-4">
            <div class="card-header py-3">
                Blog Tablosu
                @Html.ActionLink("Ekle", "BlogCreate", "Home", null, new { @class = "btn btn-primary float-right" })
            </div>
                @if (Model.Count <= 0)
                  {
                        <p class="text-center">Hiç Veri Yok</p>
                  }
                 else
                  {
            <div class="card-body">
                 <div class="table-responsive">
                  <table class="table table-bordered" id="dataTable" width="100%" cellspacing="0">
                          <thead>
                           <tr>
                            <th>Başlık</th>
                            <th>Konu</th>
                            <th>Image</th>
                            <th>Kategori Adı</th>
                            <th>Dil</th>
                            <th>İşlem</th>
                           </tr>
                        </thead>
                        <tbody>
                            @foreach (var item in Model)
                             {
                                <tr>
                                    <td>@item.Header</td>
                                    <td>@item.Content</td>
                                    <td>@item.ImageUrl</td>
                                    <td>@item.Category.Name</td>

                                        @if (((int)item.Language) == 1)
                                            {
                                            <td>"Türkçe"</td> 
                                            }
                                        else
                                            {
                                            <td>"İngilizce";</td>
                                            }
                                        <td>
                                            @Html.ActionLink("Güncelle", "BlogUpdate", "Home", new { id = item.Id }, new { @class = "btn btn-warning" })
                                            @Html.ActionLink("Sil", "BlogDelete", "Home", new { id = item.Id }, new { @class = "btn btn-danger" })
                                        </td>
                                </tr>
                                             }

                        </tbody>
                  </table>
                </div>
            </div>
            }
    </div>

</div>