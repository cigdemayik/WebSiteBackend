@model IndexViewModel
@using Microsoft.AspNetCore.Mvc.ModelBinding;
@inject Microsoft.AspNetCore.Mvc.Localization.IViewLocalizer localizer
@inject Microsoft.Extensions.Options.IOptions<Microsoft.AspNetCore.Builder.RequestLocalizationOptions> locOptions
@inject WebSiteBackend.Business.Abstracts.Interfaces.ILocalizationResourceService localizationService
@{
    Layout = "_Layout";
    var culture = Context.Features.Get<Microsoft.AspNetCore.Localization.IRequestCultureFeature>();
    var displayname = culture.RequestCulture.UICulture.Name;
    var language = culture.RequestCulture.UICulture.Name=="en"?1:2;
}
@*@localizationService.GetByLanguage("TestBaslik",language).Result.Value*@
<!-- Carousel Start -->
<div class="carousel">
    <div class="container-fluid">
        <div class="owl-carousel">
            @if(Model.Carousels!=null)
            @foreach (var carousel in Model.Carousels)
            {
                <div class="carousel-item">
                    <div class="carousel-img">
                        <img src="@carousel.ImageUrl" alt="Image">
                    </div>
                    <div class="carousel-text">
                        <h1>@carousel.Header</h1>
                        <p>@carousel.Detail</p>
                        @*<div class="carousel-btn">
            <a class="btn custom-btn" href="">View Menu</a>
            <a class="btn custom-btn" href="">Book Table</a>
        </div>*@
                    </div>
                </div>
            }

        </div>
    </div>
</div>
<!-- Carousel End -->
@*Booking Start*@
<div class="booking">
    <div class="container">
        <div class="row align-items-center">
            <div class="col-lg-7">
                <div class="booking-content">
                    <div class="section-header">
                        <p>@localizationService.GetByLanguage("Blogs", language).Result.Value</p>
                        <h2>@Model.Blog.Header</h2>
                    </div>
                    <div class="about-text">
                        @Html.Raw(Model.Blog.Content)


                    </div>
                </div>
            </div>
        </div>
    </div>
</div>
<!-- Booking End -->
<!-- About Start -->
<div class="about">
    <div class="container">
        <div class="row align-items-center">
            <div class="col-lg-6">
                <div class="about-img">
                    <img src="@Model.AboutUs.ImageUrl" alt="Image">
                </div>
            </div>
            <div class="col-lg-6">
                <div class="about-content">
                    <div class="section-header">
                        <p>@localizationService.GetByLanguage("AboutUs", language).Result.Value</p>
                    </div>
                    <div class="about-text">

                        <p>
                                @Html.Raw(Model.AboutUs.Content)
                        </p>

                        @Html.ActionLink(@localizationService.GetByLanguage("More", language).Result.Value, "About", "Home", null, new { @class = "btn custom-btn " })
                    </div>
                </div>
            </div>
        </div>
    </div>
</div>
<!-- About End -->
<!-- Product Start -->
<div class="food">
    <div class="container">
        <div class="row align-items-center">
            @if(Model.Products!=null)
            @foreach (var products in Model.Products)
            {
                <div class="col-md-4">
                    <div class="food-item">
                        <i class="flaticon-cooking"></i>
                        <h2>@products.Name</h2>
                        <p>
                            @Html.Raw(products.Content)
                        </p>

                    </div>
                </div>

            }

        </div>
    </div>
</div>
<!-- Product End -->
